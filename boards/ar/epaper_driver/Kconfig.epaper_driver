config BOARD_EPAPER_DRIVER
	select SOC_NRF54L05_CPUAPP if BOARD_EPAPER_DRIVER_NRF54L05_CPUAPP
	select SOC_NRF54L10_CPUAPP if BOARD_EPAPER_DRIVER_NRF54L10_CPUAPP || BOARD_EPAPER_DRIVER_NRF54L10_CPUAPP_NS
	select SOC_NRF54L15_CPUAPP if BOARD_EPAPER_DRIVER_NRF54L15_CPUAPP || BOARD_EPAPER_DRIVER_NRF54L15_CPUAPP_NS
	select SOC_NRF54L15_CPUFLPR if BOARD_EPAPER_DRIVER_NRF54L15_CPUFLPR || \
					    BOARD_EPAPER_DRIVER_NRF54L15_CPUFLPR_XIP
